<Window x:Class="DateTimeParser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DateTimeParser"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="20">
            <UniformGrid>
                <TextBox x:Name="inputTextBox">dsadas</TextBox>
                <TextBox x:Name="formatInputTextBox"></TextBox>
            </UniformGrid>

            <TextBlock x:Name="outputTextBlock" Margin="0,20,0,0">Год:  Месяц:  День:</TextBlock>

            <Button x:Name="convertBtn" Margin="0,20,0,0" Click="convertBtn_Click">Конвертировать</Button>

            <CheckBox x:Name="isUsingTryCheckBox" Margin="0,20,0,0">Проверять корректность ввода</CheckBox>
        </StackPanel>

    </Grid>
</Window>
